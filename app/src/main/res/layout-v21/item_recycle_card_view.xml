<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageRecyclerCardView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@drawable/almasud"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="7dp">

            <TextView
                android:id="@+id/nameRecyclerCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/gray_800"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneRecyclerCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="017XXXXXXXX"
                android:textColor="@color/gray_800"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonCopyRecyclerCardView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_content_copy_white_24dp"
                android:tint="@color/gray_800"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/imageButtonDeleteRecyclerCardView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_delete_white_24dp"
                android:tint="@color/gray_800"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>