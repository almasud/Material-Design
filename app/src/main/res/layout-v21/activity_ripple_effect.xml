<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RippleEffectActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ripple_with_border"
        android:textColor="@android:color/black"
        android:background="?android:selectableItemBackground"
        android:textSize="20sp"
        android:padding="20dp"
        android:onClick="rippleClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ripple_without_border"
        android:textColor="@android:color/black"
        android:background="?android:selectableItemBackgroundBorderless"
        android:textSize="20sp"
        android:padding="20dp"
        android:onClick="rippleClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_ripple_with_border"
        android:textColor="@android:color/black"
        android:background="@drawable/custom_border_ripple"
        android:textSize="20sp"
        android:padding="20dp"
        android:onClick="rippleClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_ripple_without_border"
        android:textColor="@android:color/black"
        android:background="@drawable/custom_borderless_ripple"
        android:textSize="20sp"
        android:padding="20dp"
        android:onClick="rippleClick"/>

</LinearLayout>