<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Customize your theme here. -->
    </style>

    <!-- Parent theme for all devices (with bellow to above API 21 (Lollipop)). -->
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/red_700</item>  <!-- For all error color -->

        <!-- When the bellow color is not defined then colorAccent is applied by default -->
        <item name="colorControlHighlight">#F44336</item>
        <item name="colorControlActivated">#0cf427</item>
        <item name="colorControlNormal">#f955f3</item>
        <item name="colorButtonNormal">#8BC34A</item>

        <!-- Customize Action mode (used in contextual menu) theme -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
    </style>

    <!-- Customize toolbar theme -->
    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Text color of Toolbar title -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Background color of popup menu (3 dots) and navigation drawer icons -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- Customize popup (3 dots) menu theme -->
    <style name="MyPopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="android:background">@color/popup_menu_background</item>-->
        <item name="android:textColorPrimary">@color/gray_800</item>
    </style>

    <!-- Customize action mode style -->
    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/contextual_background</item>
        <item name="titleTextStyle">@style/MyActionbarTitleStyle</item>
        <!-- Change the default close icon of action mode -->
<!--        <item name="actionModeCloseDrawable">@drawable/abc_vector_test</item>-->
    </style>

    <!-- Customize action bar title style -->
    <style name="MyActionbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/contextual_text</item>
    </style>

    <!-- Customize text appearance for individual error message -->
<!--    <style name="errorTextAppearance" parent="@android:style/TextAppearance">-->
<!--        <item name="android:textColor">@color/red_700</item>-->
<!--    </style>-->

</resources>
